@page
@model EmptyWebUI.Pages.IndexModel
<div class="card rounded-0 my-5">
    <div class="card-header bg-gradient bg-info">
        <h3>Products:</h3>
    </div>
    <div class="card-body bg-gradient bg-info bg-opacity-25">
        <table class="table table-striped table-hover table-info" id="example">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Product Number</th>
                    <th>Name</th>
                    <th>Categories</th>
                    <th>Model</th>
                    <th>Size</th>
                    <th>Weight</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Products)
                {
                    <tr>
                        <td>@item.ProductId</td>
                        <td>@item.ProductNumber</td>
                        <td>@item.Name</td>
                        <td>@item.ProductSubcategory / @item.ProductCategory</td>
                        <td>@item.ProductModel</td>
                        <td>@item.Size @item.SizeUnitMeasure</td>
                        <td>@item.Weight @item.WeightUnitMeasure</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>